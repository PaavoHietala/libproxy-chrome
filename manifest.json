{
    "manifest_version": 3,

    "name": "Aalto Libproxy wrapper plugin",
    "description": "This extension will forward you from the current page to the LibProxy equivalent unlocking the paywalled content.",
    "version": "2.0",
    "homepage_url": "https://github.com/PaavoHietala/libproxy-chrome",

    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon-128.png",
        "default_title": "LibProxy-Chrome"
    },

    "icons": { "16": "icons/icon-16.png",
               "48": "icons/icon-48.png",
               "128": "icons/icon-128.png"
    },

    "permissions": [
        "activeTab"
    ]
  }